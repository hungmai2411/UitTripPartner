<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingHorizontal="15dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/left"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtIdBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07/05/2022"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/primary" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text=" ("/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/txtPhoneNumber"
                android:textStyle="bold"
                android:text="0399720685"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text=")"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtNameRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHÒNG ĐƠN" />

        <TextView
            android:id="@+id/txtNumberNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/txtPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trả tại khách sạn" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPrice"
            android:textDirection="ltr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200000aaaassss"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:textDirection="rtl"
            android:id="@+id/txtDateBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/05/2022"
             />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cancelled_color"
            android:paddingHorizontal="8dp"
            android:text="Cancelled"
            android:textColor="@color/cancelled_text" />

    </LinearLayout>

</RelativeLayout>