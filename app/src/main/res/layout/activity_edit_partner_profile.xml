<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditPartnerProfileActivity"
        android:orientation="vertical">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/background"
                    android:src="@drawable/ic_action_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="25dp"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/buenard_bold"
                    android:text="Profile" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/imgCover"
            android:layout_marginTop="10dp"
            android:background="#79dae8"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="-60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/company_profile" />

                <ImageView
                    android:id="@+id/imgAdd"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignBottom="@+id/imgAvatar"
                    android:layout_toRightOf="@+id/imgAvatar"
                    android:src="@drawable/ic_baseline_camera_alt_24" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginBottom="3dp"
                android:textSize="20sp"
                android:fontFamily="@font/buenard_bold"
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="serif"
                android:id="@+id/edtName"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawablePadding="12dp">
            </EditText>

            <TextView
                android:layout_marginBottom="3dp"
                android:textSize="20sp"
                android:fontFamily="@font/buenard_bold"
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="serif"
                android:id="@+id/edtEmail"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawablePadding="12dp">
            </EditText>

            <TextView
                android:layout_marginBottom="3dp"
                android:textSize="20sp"
                android:fontFamily="@font/buenard_bold"
                android:text="Phone number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="serif"
                android:id="@+id/edtPhoneNumber"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawablePadding="12dp">
            </EditText>

            <TextView
                android:layout_marginBottom="3dp"
                android:textSize="20sp"
                android:fontFamily="@font/buenard_bold"
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="serif"
                android:id="@+id/edtAddress"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawablePadding="12dp">
            </EditText>

            <TextView
                android:layout_marginBottom="3dp"
                android:textSize="20sp"
                android:fontFamily="@font/buenard_bold"
                android:text="Facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="serif"
                android:id="@+id/edtFacebook"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawablePadding="12dp">
            </EditText>

            <TextView
                android:layout_marginBottom="3dp"
                android:textSize="20sp"
                android:fontFamily="@font/buenard_bold"
                android:text="Website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="serif"
                android:id="@+id/edtWebsite"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawablePadding="12dp">
            </EditText>

            <Button
                android:id="@+id/btnUpdate"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/primary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:text="Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>